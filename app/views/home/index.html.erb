      <div class="card-body d-flex align-items-end justify-content-center">
        <h5 class="card-title"><%= I18n.t('.control_panel') %></h5>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card h-100 shadow-sm p-2 text-center bg-primary-subtle">
      <a href="#" class="d-block" style="min-height:150px; line-height:150px;">
        <%= image_tag "thinking.png", class: "card-img-top mx-auto", style: "max-width: 110px; max-height: 110px;" %>
      </a>
      <div class="card-body d-flex align-items-end justify-content-center">
        <h5 class="card-title"><%= I18n.t('.thinking') %></h5>
      </div>
    </div>
  </div>
</div>

