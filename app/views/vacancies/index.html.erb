<% content_for :title, I18n.t('vacancies') %>
<div class="row">
  <div class="col">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <h1 class="h3 mb-4 text-center"><%= t('all_list') %></h1>
        <div class="table-responsive" 
            data-controller="datatables" 
            data-datatables-language-value="<%= I18n.locale %>" 
            data-datatables-options-value="<%= { 
              serverSide: true, 
              ajax: vacancies_path(format: :json), 
              processing: true,
              pageLength: 10
            }.to_json %>">
          <table class="table table-striped table-hover table-bordered border-secondary" data-datatables-target="table">
            <thead class="table-warning">
              <tr>
                <th scope="col"><%= ::Vacancy.human_attribute_name(:name) %></th>
                <th scope="col"><%= ::Vacancy.human_attribute_name(:updated_at) %></th>
                <th scope="col" class="text-end"><%= I18n.t('.actions') %></th>
              </tr>
            </thead>
            <tbody>
              <%# Данные будут загружены через Ajax %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>