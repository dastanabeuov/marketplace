<% if object.image.attached? %>
  <%= image_tag object.image, class: "bd-placeholder-img card-img-top" %>

  <%= button_to polymorphic_path([:remove_image, :admin, object]),
      method: :delete,
      data: { turbo_confirm: t("are_you_sure") },
      class: "btn btn-danger my-2",
      title: t("destroy") do %>
    <i class="bi bi-trash3-fill"></i>
  <% end %>
<% end %>
