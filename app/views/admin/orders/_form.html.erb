<%= form_for [:admin, @order] do |f| %>
  <div class="mb-4">
    <div class="form-floating">
      <%= f.select :order_status,
          Order::ORDER_STATUSES.map { |value, key| [I18n.t("order_status.#{key}"), value] },
          { include_blank: false },
          class: "form-select",
          id: "orderStatusSelect" %>
      <%= f.label :order_status, "#{I18n.t('status')}", for: "orderStatusSelect" %>
    </div>
  </div>

  <h4 class="mb-3"><%= I18n.t('items_in_order') %></h4>

  <div id="order_items" class="vstack gap-4">
    <%= f.fields_for :order_items do |item_form| %>
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <div class="form-floating">
                <%= item_form.collection_select :product_id, Product.all, :id, :name,
                      { prompt: "#{I18n.t('select_product')}" },
                      class: "form-select",
                      id: "productSelect_#{item_form.index}" %>
                <%= item_form.label :product_id, "#{I18n.t('product')}", for: "productSelect_#{item_form.index}" %>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-floating">
                <%= item_form.number_field :quantity,
                      min: 1,
                      class: "form-control",
                      id: "quantityField_#{item_form.index}" %>
                <%= item_form.label :quantity, "#{I18n.t('quantity')}", for: "quantityField_#{item_form.index}" %>
              </div>
            </div>

            <% if item_form.object.persisted? %>
              <div class="col-md-2 d-flex align-items-center justify-content-end">
                <div class="form-check">
                  <%= item_form.check_box :_destroy, class: "form-check-input", id: "destroyCheck_#{item_form.index}" %>
                  <%= item_form.label :_destroy, "#{I18n.t('destroy')}", class: "form-check-label", for: "destroyCheck_#{item_form.index}" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= f.submit "#{I18n.t('save')}", class: "btn btn-primary w-100 py-2" %>
  </div>
<% end %>
