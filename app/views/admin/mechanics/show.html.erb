<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 my-4">
    <%= render 'admin/shared/breadcrumbs' %>

    <div class="mechanic-info">
      <%= render "admin/shared/attached_image", object: @mechanic %>
      <h1><%= @mechanic.name %></h1>
      <p><%= @mechanic.send("description_#{I18n.locale}") %></p>
    </div>

    <div class="btn-group mt-3">
      <%= button_to admin_mechanic_path(@mechanic),
          method: :delete,
          data: { turbo_confirm: t('are_you_sure') },
          class: "btn btn-danger",
          title: t('destroy') do %>
        <i class="bi bi-trash3-fill"></i>
      <% end %>

      <%= link_to edit_admin_mechanic_path(@mechanic), class: "btn btn-warning", title: t('edit') do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>

      <%= link_to admin_mechanics_path, class: "btn btn-secondary", title: t('back') do %>
        <i class="bi bi-arrow-left-circle-fill"></i>
      <% end %>      
    </div>
  </main>
</div>
