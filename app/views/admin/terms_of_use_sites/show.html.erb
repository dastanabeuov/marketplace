<div class="row">
  <%= render 'nav' %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 my-4">
    <%= render 'admin/shared/breadcrumbs' %>

    <div class="terms-of-use-site-info">
      <h1><%= @terms_of_use_site.name %></h1>
      <p><%= @terms_of_use_site.description %></p>
    </div>

    <div class="btn-group mt-3">
      <%= button_to admin_terms_of_use_site_path(@terms_of_use_site),
          method: :delete,
          data: { turbo_confirm: t('are_you_sure') },
          class: "btn btn-danger",
          title: t('destroy') do %>
        <i class="bi bi-trash3-fill"></i>
      <% end %>

      <%= link_to edit_admin_terms_of_use_site_path(@terms_of_use_site), class: "btn btn-warning", title: t('edit') do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
    </div>
  </main>
</div>
