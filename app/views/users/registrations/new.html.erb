<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="text-center mb-4"><%= t('sign_up', default: 'Sign up') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :first_name, t('activerecord.attributes.user.first_name', default: 'First name'), class: 'form-label' %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :last_name, t('activerecord.attributes.user.last_name', default: 'Last name'), class: 'form-label' %>
            <%= f.text_field :last_name, autocomplete: "family-name", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :phone_number, t('activerecord.attributes.user.phone_number', default: 'Phone number'), class: 'form-label' %>
            <%= f.telephone_field :phone_number, autocomplete: "tel", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :company_name, t('activerecord.attributes.user.company_name', default: 'Company name'), class: 'form-label' %>
            <%= f.text_field :company_name, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :delivery_address, t('activerecord.attributes.user.delivery_address', default: 'Delivery address'), class: 'form-label' %>
            <%= f.text_field :delivery_address, autocomplete: "street-address", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, t('activerecord.attributes.user.email', default: 'Email'), class: 'form-label' %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, t('activerecord.attributes.user.password', default: 'Password'), class: 'form-label' %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                (<%= t('devise.shared.minimum_password_length', count: @minimum_password_length, default: "#{@minimum_password_length} characters minimum") %>)
              </small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation', default: 'Password confirmation'), class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit t('sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>