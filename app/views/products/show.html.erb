<div class="row g-0 bg-body-tertiary position-relative mt-3 shadow">
  <div class="col-md-6 mb-md-0 p-md-4">
    <%= render "shared/attached_image", object: @product %>
  </div>

  <div class="col-md-6 p-4 ps-md-0">
    <h1 class="text-center card-title h3 mb-3"><%= @product.name %></h1>

    <% if @product.description.present? %>
      <p class="card-text"><%= @product.description %></p>
    <% end %>
    
    <hr class="dropdown-divider">
    
    <% if @product.companies.present? %>
      <h6 class="mt-3"><%= I18n.t('.companies') %></h6>
      <ul class="mb-2">
        <% @product.companies.each do |company| %>
          <li><%= company.name %></li>
        <% end %>
      </ul>
    <% end %>

    <% if @product.categories.present? %>
      <h6 class="mt-3"><%= I18n.t('.categories') %></h6>
      <ul class="mb-2">
        <% @product.categories.each do |category| %>
          <li><%= category.name %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="mt-4">
      <%= link_to I18n.t('.back_to_catalog'), products_path, class: "text-primary" %>
    </div>
  </div>
</div>
