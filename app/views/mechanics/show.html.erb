<div class="row">
  <div class="col">
    <div class="card shadow-sm">
      <%= render "shared/attached_image", object: @mechanic %>

      <div class="card-body">
        <h1 class="text-center card-title h3 mb-3"><%= @mechanic.name %></h1>
        <% if @mechanic.description.present? %>
          <p class="card-text"><%= @mechanic.description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
