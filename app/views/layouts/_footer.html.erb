<footer data-controller="footer" data-footer-target="footer"
  class="client-footer text-center text-sm-start mt-auto pt-4">
  <div class="container">
    <div class="row">
      <div class="col-6 col-md-2 mb-3">
        <h6 class="text-uppercase fw-bold mb-2"><%= I18n.t('.info') %></h6>
        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <a href="<%= products_path %>" class="nav-link p-0"><%= I18n.t('.catalog') %></a>
            <a href="<%= companies_path %>" class="nav-link p-0"><%= I18n.t('.brands') %></a>
          </li>
        </ul>
      </div>

      <div class="col-6 col-md-2 mb-3">
        <h6 class="text-uppercase fw-bold mb-2"><%= I18n.t('.company') %></h6>
        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <a href="<%= about_path %>" class="nav-link p-0"><%= I18n.t('.about') %></a>
            <a href="<%= vacancies_path %>" class="nav-link p-0"><%= I18n.t('.vacancies') %></a>
          </li>
        </ul>
      </div>

      <div class="col-6 col-md-2 mb-3">
        <h6 class="text-uppercase fw-bold mb-2"><%= I18n.t('.support') %></h6>
        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <a href="<%= contact_path %>" class="nav-link p-0"><%= I18n.t('.contacts') %></a>
            <a href="<%= privacy_policy_path %>" class="nav-link p-0"><%= I18n.t('.privacy_policy') %></a>
            <a href="<%= terms_of_use_site_path %>" class="nav-link p-0"><%= I18n.t('.terms_of_use_site') %></a>
          </li>
        </ul>
      </div>

      <div class="col-md-5 offset-md-1 mb-3">
        <form>
          <h6 class="text-uppercase fw-bold mb-3"><%= I18n.t('.subscribe') %></h6>
          <div class="d-flex flex-column flex-sm-row gap-2">
            <input
              id="newsletter1"
              type="email"
              class="form-control"
              placeholder="<%= I18n.t('.subscribe_to_our_newsletter') %>"
              required
            >
            <button class="btn btn-secondary" type="submit">
              <i class="bi bi-send"></i>
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center py-2 border-top">
      <p class="mb-2 mb-sm-0">
