<%= turbo_frame_tag "cart_button_#{product.id}" do %>
  <% in_cart = cart && cart[product.id.to_s].to_i > 0 %>

  <%= button_to "<i class='bi bi-cart-dash'></i>".html_safe,
      add_item_cart_path(product_id: product.id),
      method: :post,
      data: { turbo_frame: "cart_button_#{product.id}" },
      class: "btn btn-sm #{in_cart ? 'btn-success' : 'btn-outline-secondary'}",
      title: in_cart ? "Товар в корзине" : "#{I18n.t('.add_to_cart')}" %>
<% end %>
